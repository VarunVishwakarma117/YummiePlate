<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:focusableInTouchMode="true"
            android:background="@drawable/bg_login_page_button1"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registrationemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/cursor_color"
                android:drawablePadding="10dp"
                android:backgroundTint="@android:color/transparent"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:hint="Enter Email" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_login_page_button1"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            app:passwordToggleTint="#ffffff"
            android:padding="5dp"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/registrationpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:hint="Enter Password"
                android:textColor="#ffffff"
                android:backgroundTint="@android:color/transparent"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/bg_login_page_button1"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            app:passwordToggleTint="#ffffff"
            app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/registrationpconfirmassword"
                android:layout_width="match_parent"
                android:textCursorDrawable="@drawable/cursor_color"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:backgroundTint="@android:color/transparent"
                android:paddingStart="30dp"
                android:textColor="#ffffff"
                android:paddingEnd="20dp"
                android:hint="Confirm Password"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/registrationbutton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:padding="15dp"
            android:background="@drawable/bg_login_page_button2"
            android:text="registration" />

    </LinearLayout>

</ScrollView>