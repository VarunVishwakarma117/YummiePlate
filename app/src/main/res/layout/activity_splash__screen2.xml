<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".Splash_Screen2">

  <RelativeLayout
      android:id="@+id/relativeLayout2"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:background="@drawable/bg_circle"
      android:elevation="5dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.32000002">

    <ImageView
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/avd_done" />

  </RelativeLayout>

  <TextView
      android:id="@+id/placed"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Order Successfully Placed"
      android:textColor="@android:color/white"
      android:textSize="22sp"
      android:layout_marginTop="50dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/relativeLayout2"
      app:layout_constraintStart_toStartOf="@+id/relativeLayout2"
      app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="100dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">
    <TextView
        android:id="@+id/track_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:background="@drawable/bg_login_page_button1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Track Order"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/continue_shopping"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:background="@drawable/bg_login_page_button1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Continue Shopping"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>