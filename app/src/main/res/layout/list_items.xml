<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:id="@+id/txtcontainer">
        <ImageView
            android:id="@+id/image"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:layout_toEndOf="@id/image">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/local_name_item__textView"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                android:textColor="#000000"
                tools:text="Agarbatti"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/default_textView"
                android:layout_below="@id/local_name_item__textView"
                android:textAppearance="?android:textAppearanceSmall"
                tools:text="Incense stick"/>
            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="â‚¹100"
                android:textColor="@android:color/black"
                android:layout_below="@id/default_textView"
                android:layout_marginTop="5dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/item_add"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Add"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_alignParentEnd="true"/>
            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider"
                android:layout_toStartOf="@id/item_add"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/if_wishlist"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_strokes">
        <TextView
            android:id="@+id/move_to_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Move to Cart"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:gravity="center"
            android:textColor="@color/colorPrimary"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/wishlist_remove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="12dp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:text="Remove"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimary"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>