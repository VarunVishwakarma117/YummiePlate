<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_cake">

    <fragment
        android:id="@+id/navigation_cake"
        android:name="com.example.yummieplate.ui.cakes.CakesFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_cakes" >
        <action
            android:id="@+id/action_navigation_cake_to_navigation_pizza"
            app:destination="@id/navigation_pizza" />
        <action
            android:id="@+id/action_navigation_cake_to_navigation_sweets"
            app:destination="@id/navigation_sweets" />
        <action
            android:id="@+id/action_navigation_cake_to_navigation_cupcake"
            app:destination="@id/navigation_cupcake" />
        <action
            android:id="@+id/action_navigation_cake_to_navigation_tea_n_cookies"
            app:destination="@id/navigation_tea_n_cookies" />
    </fragment>

    <fragment
        android:id="@+id/navigation_pizza"
        android:name="com.example.yummieplate.ui.pizza.PizzaFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_pizzas" />

    <fragment
        android:id="@+id/navigation_sweets"
        android:name="com.example.yummieplate.ui.sweets.SweetsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_sweets" />
    <fragment
        android:id="@+id/navigation_cupcake"
        android:name="com.example.yummieplate.ui.fragment_cupcake.CupCakesFragment"
        android:label="Cupcakes and Muffins"
        tools:layout="@layout/fragment_cupcake" />

    <fragment
        android:id="@+id/navigation_tea_n_cookies"
        android:name="com.example.yummieplate.ui.tea_n_cookies.Tea_n_CookiesFragment"
        android:label="Tea and cookies"
        tools:layout="@layout/fragment_flower_n_boquet" />

</navigation>
